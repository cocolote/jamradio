<div id="log-in">
  <h2 class="text">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :user_name, class: "text"%><br />
      <%= f.text_field :user_name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :email, class: "text" %><br />
      <%= f.email_field :email %>
    </div>

    <div class="field">
      <%= f.label :password, class: "text" %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "text" %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", id: "submit-button" %>
    </div>
  <% end %>

  <div id="links-users">
    <%= render "devise/shared/links" %>
  </div>
</div>
